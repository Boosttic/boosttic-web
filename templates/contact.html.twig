{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('contact') }}
{% endblock %}

{% block content %}
    {{ form_start(form) }}
        <div class="form-content">
            <div class="form-group">
                <div class="form-row-2">
                    <div class="mb-3 row">
                        {{ form_label(form.firstname) }}
                        <i class="form-required">*</i>
                        <div class="col-sm-10">
                            {{ form_widget(form.firstname) }}
                        </div>
                    </div>
                    <div class="mb-3 row">
                        {{ form_label(form.lastname) }}
                        <i class="form-required">*</i>
                        <div class="col-sm-10">
                            {{ form_widget(form.lastname) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row-2">
                    <div class="mb-3 row">
                        {{ form_label(form.mail) }}
                        <i class="form-required">*</i>
                        <div class="col-sm-10">
                            {{ form_widget(form.mail) }}
                        </div>
                    </div>
                    <div class="mb-3 row">
                        {{ form_label(form.phone) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.phone) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="mb-3 row">
                    {{ form_label(form.project) }}
                    <i class="form-required">*</i>
                    <div class="col-sm-10">
                        {{ form_widget(form.project) }}
                    </div>
                </div>
            </div>
        </div>
        <span class="form-info">Les champs avec un <i class="form-required">*</i> doivent Ãªtre remplis.</span>
        <button class="btn" type="submit" style="margin: auto">Envoyer le message</button>
    {{ form_end(form) }}
{% endblock %}